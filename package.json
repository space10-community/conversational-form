{
  "dependencies": {
    "eslint-plugin-prettier": "^4.2.1"
  },
  "scripts": {
    "build": "echo \"VITE_RELEASE_HASH=${SOURCE_VERSION}\" >> \"`find . -name \".env\"`\" && NODE_OPTIONS=--max-old-space-size=8096 vite build",
    "lint": "eslint \"./**/*.{ts,tsx,js,jsx}\"",
    "lint:fix": "yarn lint --fix",
    "lint:ruby": "bundle exec rubocop -a",
    "dev": "NODE_OPTIONS=--max_http_header_size=220480 vite",
    "start": "yarn dev",
    "prepare": "yarn run husky install",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "storybook": "VITE_APP_API_URL=\"/api\" storybook dev -p 6006",
    "test-storybook": "VITE_APP_API_URL=\"/api\" test-storybook",
    "build-storybook": "NODE_OPTIONS=\"--max-old-space-size=32768\" VITE_APP_API_URL=\"/api\" storybook build",
    "chromatic": "chromatic --exit-zero-on-changes --skip 'dependabot/**'"
  },
  "devDependencies": {
    "@types/node": "^18.16.1",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "eslint": "^8.0.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-etc": "^2.0.2",
    "eslint-plugin-i18next": "^6.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "airbnb",
      "plugin:i18next/recommended"
    ],
    "plugins": [
      "i18next"
    ],
    "rules": {
      "i18next/no-literal-string": [
        "error",
        {
          "markupOnly": true,
          "ignore": [
            ".*@jornadayu.*",
            "Invite",
            "English",
            "Português",
            "Español"
          ],
          "onlyAttribute": [
            ""
          ]
        }
      ],
      "no-shadow": "off",
      "@typescript-eslint/no-shadow": "error",
      "@typescript-eslint/no-non-null-assertion": "off",
      "no-use-before-define": "off",
      "import/no-unresolved": "off",
      "import/extensions": "off",
      "import/prefer-default-export": "off",
      "react/jsx-props-no-spreading": "off",
      "react/prop-types": "off",
      "react/jsx-fragments": [
        "error",
        "syntax"
      ],
      "react/jsx-one-expression-per-line": "error",
      "react/jsx-indent": [
        2,
        2,
        {
          "indentLogicalExpressions": true
        }
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "**/vite.config.ts"
          ]
        }
      ],
      "react/self-closing-comp": [
        "error",
        {
          "component": true,
          "html": true
        }
      ]
    },
    "overrides": [
      {
        "extends": [
          "plugin:@typescript-eslint/eslint-recommended",
          "plugin:@typescript-eslint/recommended"
        ],
        "files": [
          "**/*.ts?(x)",
          "**/*.js?(x)"
        ],
        "rules": {
          "react/no-unused-prop-types": "off",
          "@typescript-eslint/no-explicit-any": "off",
          "no-use-before-define": "off",
          "import/no-unresolved": "off",
          "react/jsx-filename-extension": [
            1,
            {
              "extensions": [
                ".tsx"
              ]
            }
          ],
          "react/jsx-indent": [
            2,
            2,
            {
              "indentLogicalExpressions": true
            }
          ],
          "no-underscore-dangle": 0,
          "comma-dangle": [
            1,
            "never"
          ],
          "semi": [
            2,
            "never"
          ],
          "react/react-in-jsx-scope": "off",
          "camelcase": "off"
        }
      },
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ],
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
        }
      }
    }
  }
}
