@import "nib"
@import "rupture"
@import "_cf-docs-variables"

// boilerplate
global-reset()

html
	overflow-y auto

body
	background $color-black

body, html
	position relative
	width 100%
	height 100%
	padding 0px
	margin 0px

main.content
	font-family Helvetica Neue, Helvetica
	font-style normal
	-webkit-font-smoothing antialiased
	min-height 100%
	height auto
	width 100%
	position relative
	overflow hidden
	display block

	*
		-webkit-tap-highlight-color rgba(255, 255, 255, 0)
		-webkit-touch-callout none
		-webkit-user-select none
		-khtml-user-select none
		-moz-user-select none
		-ms-user-select none
		user-select none

	*, *:before, *:after
		box-sizing border-box
		outline none

	a, a:active, a:focus
		color currentColor

	.switch-btn#cf-toggle-btn
		+above($breakpoint-1)
			position absolute
			top 40px
			z-index $zIndex-high
			right 32px
			transform translateX(400px)
			will-change transform
			transition transform $anim-time-2 $anim-easeOut

			&.show
				transform translateX(0px)

		+below($breakpoint-1)
			display none
