{% extends "../../../layout.twig" %}

{% set page_title = 'Custom placeholder text' %}
{% set page_slug = '/functionality/' %}

{% block page %}
    <h1><a href="#value-piping" id="value-piping" class="anchor"></a>{{page_title}}</h1>
    <p><code>cf-input-placeholder="Place holder text"</code> can be used to set a custom placeholder text.</p>

    <pre><code class="language-html">&lt;form id="form" cf-form>
    &lt;input 
    	type="text" 
    	cf-input-placeholder="This is a custom placeholder text" 
    	cf-questions="Check out the placeholder text below:" />
</form></code></pre>

    <div class="row cfdoc-example-row">
    	<div class="col-md-12 col-lg-6">
            <p>The form:</p>
            <!-- Conversational Form will auto-run because of attribute "cf-form" -->
            <form id="form" cf-form>
                <input type="text" cf-input-placeholder="This is a custom placeholder text" cf-questions="Check out the placeholder text below:" />
            </form>

    	</div>
    	<div class="col-md-12 col-lg-6 cfdoc-example">
    		<div id="cf-context" role="cf-context" cf-context></div>
    	</div>

       
    </div>
	
	
{% endblock %}
