// roboto font
@import url('https://fonts.googleapis.com/css?family=Roboto');

@import "nib"
@import "rupture"
@import "cf-variables"

// boilerplate
.conversational-form
	*, *:before, *:after
		box-sizing border-box
		outline none

	button
		border none
		background none
		margin 0px
		padding 0px
		outline none
		-webkit-tap-highlight-color rgba(0, 0, 0, 0) !important

	// input:not([type="checkbox"]):-webkit-autofill
	// 	-webkit-box-shadow 0 0 0px 1000px white inset
	// 	background-color white

	// input:not([type="checkbox"])
	// 	&:focus, &:focus, &:focus
	// 		outline none
	// 		-webkit-appearance none

	menu
		padding 0px
		margin 0px

	ul, ol, li
		margin 0
		padding 0

	a, a:active, a:visited
		color currentColor

	button, a
		cursor pointer
		text-decoration none
	
	// standard emoji lib styles, https://github.com/Ranks/emojify.js
	.emoji
		width 16px
		height auto
		margin 0px 4px
	
	padding 20px
	font-family 'Roboto', sans-serif
	font-size 12px
	line-height 1.416666667

	position absolute
	top 0px
	left 0px
	right 0px
	bottom 0px
	z-index 999
	margin auto
	background white

	opacity 0
	will-change opacity
	transition opacity $anim-time * 0.25 $anim-easeOut

	// test

	// disable user selection for the app feel
	*
		// user-select none
		-webkit-tap-highlight-color rgba(255, 255, 255, 0)
		tap-highlight-color rgba(255, 255, 255, 0)

.conversational-form--show
	opacity 1

