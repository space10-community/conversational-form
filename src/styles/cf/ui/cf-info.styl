@import "nib"
@import "rupture"
@import "../cf-variables"

cf-info
	position absolute
	pointer-events none
	z-index 0
	left 2px
	top 50%
	height 20px
	width 400px
	transform translateY(-50%)
	color $color-input-text
	opacity 0
	will-change opacity

	&.show
		opacity 1
		.conversational-form--enable-animation &
			transition opacity $anim-time $anim-easeOut

	strong
		font-weight 900