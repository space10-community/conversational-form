@import "nib"
@import "rupture"
@import "../../cf-variables"

cf-chat
	display block
	width 100%
	height auto
	overflow visible
	// flow children to bottom
	display flex
	flex-flow column nowrap
	justify-content flex-end
	align-items baseline
	margin-bottom 20px

	
	scrollable
		display block
		width 100%
		height auto
		max-height 100%
		overflow-y auto
		padding-bottom 20px // allow for bounce

		&:before
			content ""
			display block
			width 100%
			height 100%
			background red


