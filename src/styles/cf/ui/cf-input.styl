	&[error]
		pointer-events none

		input, textarea
			background $color-input-error-bg
			color $color-input-error-text

		.cf-input-button
			background $color-input-error-bg

			svg polygon
				fill $color-input-error-text
	
	&[message]
		input, textarea
			background $color-chat-reponse-user-bg
			color $color-chat-reponse-user-text

		.cf-input-button
			background $color-chat-reponse-user-bg

			svg polygon
				fill $color-chat-reponse-user-text

	&[tag-type="file"] cf-input-button.cf-input-button, cf-input-button.cf-input-button.loading
		&:after
			content ""
			display block
			width 100%
			height 100%
		
			border 1px solid alpha(#b9bcbe, 50%)
			border-radius 50%
			border-left 0
			border-top 0
			animation cf-spin 1s linear infinite
			will-change opacity
			.conversational-form--enable-animation &
				transition opacity $anim-time * 0.5 $anim-easeOut

	&[tag-type="file"] cf-input-button.cf-input-button
		div.cf-icon-attachment
			transform rotateX(0deg)
			opacity 1
			

		div.cf-icon-progress
			transform rotateX(-90deg)
			opacity 0

cf-input-button.cf-input-button
	width 29px
	height 29px
	background: white
	border: 1px solid white
	position: absolute
	overflow hidden
	right 8px
	bottom 8px
	z-index 3
	cursor pointer
	border-radius 50%
	will-change background, border
	transform-origin 50% 50%
	transform scale(0, 0)
	border: 1px solid lighten($color-chat-reponse-user-text, 95%)

	.conversational-form--enable-animation &
		transition background $anim-time * 0.5 $anim-easeOut, border $anim-time * 0.5 $anim-easeOut, transform $anim-time * 0.5 $anim-easeOutBack 0s

	// &.typing
	// 	background red !important
	
	// mic behavior
	&.microphone-interface
		.cf-input-icons:not(.cf-microphone)
			visibility hidden
		.cf-input-icons.cf-microphone
			visibility visible
		
		// when user is typing
		&.typing
			.cf-input-icons:not(.cf-microphone)
				visibility visible
			.cf-input-icons.cf-microphone
				visibility hidden
	// ------------------------------------------

	.cf-input-icons
		position absolute
		z-index 1
		pointer-events none
		width 100%
		height 100%

		> div
			width 100%
			height 100%
			position absolute
			z-index 1
			background-repeat: no-repeat;
			background-position: 50% 50%;
			transform-origin 50% 50%
			will-change transform, opacity
			.conversational-form--enable-animation &
				transition transform $anim-time * 0.5 $anim-easeOut, opacity $anim-time * 0.5 $anim-easeOut
		
		&.cf-microphone
			&.loading
				pointer-events none
				div.cf-icon-audio
					opacity 1

	div.cf-icon-attachment
		transform rotateX(90deg)
		opacity 0
		background-image: url("data:image/svg+xml;charset=utf-8;base64,");
		background-size: 12px 16px;

		// path
		// 	stroke #b9bcbe
		// 	will-change stroke
		// 	.conversational-form--enable-animation &
		// 		transition stroke $anim-time * 0.5 $anim-easeOut

	div.cf-icon-progress
		transform rotateX(0deg)
		opacity 1

		background-image url("data:image/svg+xml;charset=utf-8;base64,")
		background-size 30px 30px
	
	div.cf-icon-audio
		transform rotateX(0deg)
		opacity 1
		background-image url("data:image/png;charset=utf-8;base64,")
		background-size 12px * 0.8 19px * 0.8
		opacity 0.5

	&:active
		&:after
			opacity 0

		div
			transform scale(0.75, 0.75)
	
	&:hover, &:focus
		background: $color-chat-reponse-user-bg
		border: 1px solid lighten($color-chat-reponse-user-text, 75%)
		&:after
			opacity 0

		.cf-icon-progress
			animation cf-arrow-up $anim-time $anim-easeInOut
