@keyframes cf-spin
	0%
		transform rotate(0deg)
	100%
		transform rotate(360deg)


@keyframes cf-arrow-up
	0%
		transform translateY(0px)
	40%
		transform translateY(-40px)
	40.001%
		transform translateY(40px)
	80%
		transform translateY(-5px)
	90%
		transform translateY(2px)
	100%
		transform translateY(0px)