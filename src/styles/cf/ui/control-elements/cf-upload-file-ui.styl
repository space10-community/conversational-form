@import "nib"
@import "rupture"
@import "../../_cf-variables"

cf-upload-file-ui
	display block
	width 100%
	height $input-field-height
	position absolute
	top 0px
	padding-right 30px
	color $color-chat-reponse-user-text

	opacity 0
	transform translateY(20px) rotateX(30deg)
	will-change opacity, transform
	.conversational-form--enable-animation &
		transition opacity $anim-time * 0.5 $anim-easeOut, transform $anim-time * 0.5 $anim-easeOut

	&.animate-in
		opacity 1
		transform translateY(0px) rotateX(0deg)
		.conversational-form--enable-animation &
			transition-timing-function $anim-easeOut, $anim-easeOut


	// &:after
	// 	content ""
	// 	display block
	// 	clear both

cf-upload-file-text
	display block
	float left
	width auto
	height 100%
	// max-width 40%
	padding-left 40px
	padding-right 30px
	padding-top 17px
	position relative
	color currentColor
	max-width: 50%;
	text-overflow: ellipsis;
	overflow: hidden;

	&:before
		content ""
		display inline-block
		position absolute
		top 17px
		left 23px
		width 10px
		height 14px
		background-image url("data:image/svg+xml;charset=utf-8;base64,")
		background-repeat no-repeat
		background-size 10px 14px

cf-upload-file-progress
	display block
	height 100%
	overflow hidden
	position relative
	padding-right 30px

	&:after
		content ""
		width 100%
		background #e6f2ff
		border-radius 7px

	&:after, cf-upload-file-progress-bar
		display block
		height 10px
		position absolute
		top 19px
		z-index 1
	
	cf-upload-file-progress-bar
		width 0%
		will-change width, border-radius
		background currentColor
		z-index 2
		border-radius 7px 0px 0px 7px
		.conversational-form--enable-animation &
			transition width $anim-time * 0.2 linear, border-radius $anim-time * 0.5 $anim-easeOut

		&.loaded
			border-radius 7px 7px 7px 7px
	
