@import "nib"
@import "rupture"
@import "../../_cf-variables"

.cf-button.cf-checkbox-button
	&:hover, &.highlight, &:focus
		cf-checkbox
			background $color-chat-reponse-user-text

	&.no-text
		padding 12px 16px

		cf-checkbox
			margin-right 0px
			margin-left 0px
	
	&.has-image
		cf-checkbox
			margin-left 0px

	cf-checkbox
		display block
		float left
		width 14px
		height 14px
		border-radius 3px
		background $color-chat-reponse-user-bg
		will-change background
		margin-right 10px
		margin-left -10px
		position relative
		.conversational-form--enable-animation &
			transition background $anim-time * 0.5 $anim-easeOut

		&:after
			content ""
			position absolute
			top 2px
			left 1px
			display block
			width 13px
			height 10px
			background-image url("data:image/svg+xml;charset=utf-8;base64,")
			background-size 13px 10px
			background-repeat no-repeat
			transform-origin: 50% 50%
			will-change transform
			transform scale(0, 0)
			.conversational-form--enable-animation &
				transition transform $anim-time * 0.5 $anim-easeOut
	
	&[checked="checked"], &[selected="selected"]
		cf-checkbox
			background alpha($color-chat-reponse-user-bg, 0)

			&:after
				transform scale(1, 1)
				.conversational-form--enable-animation &
					transition-timing-function: $anim-easeOut